<%- include('./base/header.ejs') %>
    <%- include('./base/nav.ejs') %>
        <div class="container">
            <div class="alert text-center bg-primary my-3" style="color:white">
                <h5>Edit Student</h5>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col"></div>
                <div class="col">
                    <form action="/edit/student/<%= student._id%>" method="post">
                        <div>
                            <label class="form-label">Roll No</label>
                            <input type="text" class="form-control" name="rollNo" value="<%=student.rollNo%>"></input>
                        </div>
                        <div>
                            <label class="form-label">Student Name</label>
                            <input type="text" class="form-control" name="studentName" value="<%= student.studentName  %>"></input>
                        </div>
                        <div>
                            <label> Mother Name</label>
                            <input type="text" name="motherName" required>
                        </div>
                        <div>
                            <label class="form-label">Father Name</label>
                            <input type="text" class="form-control" name="fatherName"value="<%= student.fatherName  %>"></input>
                        </div>
                        <div>
                            <label class="form-label">Course</label>
                            <input type="text" class="form-control" name="course" value="<%= student.course  %>"></input>
                        </div>
                        <div>
                            <label class="form-label">Branch</label>
                            <input type="text" class="form-control" name="branch" value="<%= student.branch  %>"></input>
                        </div>
                        <div>
                            <label class="form-label">Admisson Year</label>
                            <input type="text" class="form-control" name="yearOfAdmisson" value="<%= student.yearOfAdmisson  %>"></input>
                        </div>
                        <input type="submit" value="Add Student" class="btn btn-warning w-100 my-3"></input>

                    </form>
                </div>
                <div class=" col">
                </div>
            </div>

        </div>

        <%- include('./base/footer.ejs') %>